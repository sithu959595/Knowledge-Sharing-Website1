<!-- Log in form -->


<header>
    <style>

        .login-page {
            width: 360px;
            padding: 0 0 0;
            margin: auto;
            background: #ffedc4;
            
        }

        .form {
            position: relative;
            border-radius: 1.5em;
            background: #FFFFFF;
            max-width: 360px;
            width:500px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: 0 0 100px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
            
        }

        .inputch {
            font-family: "Times New Roman", Times, serif;
            background: #f2f2f2;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
            border-radius: 1.5em;
        }

        .form button {
            font-family: "Times New Roman", Times, serif;
            text-transform: uppercase;
            background: #f5964e;
            width: 100%;
            border: 0;
            padding: 15px;
            color: #ffffff;
            font-size: 14px;
            border-radius: 1.5em;
        }

        .infocus:focus {
            background: #080200;
            color: #ffffff;
        }

        .buttonch:hover, .buttonch:active, .buttonch:focus {
            background: #f2a66d;
            color: #080200;
        }

        .textch {
            margin: 15px 0 0;
            color: #b3b3b3;
            font-size: 12px;
        }

        .textch2 {
            color: #4CAF50;
            text-decoration: none;
        }



        body {
            background: #ffedc4;
        }
    </style>



</header>

<body>
    <div class="container-fluid" align="center" style=" margin-top:0; margin-bottom:20px;">
        <div class="login-page">
        <div class="form">
            <form method="post" action="/Home/Index">
                <div class="form-group">

                    <input type="text" class="form-control inputch infocus" placeholder="Username" name="username" id="usename" style="display:inline;width:100%;height:100%" autocomplete="off" required />

                </div>
                <div class="form-group">

                    <input type="password" class="form-control inputch infocus" placeholder="Password" name="password" id="password" style="display:inline;width:100%;height:100%" autocomplete="off" required />

                </div>

                <button type="submit" class="buttonch">Log In</button><br>


                <p class="textch">Don't have a account?
                <a href="/Home/Register" class="textch2" style="margin-left:40px">Register</a></p>

            </form>
            </div>
            </div>
    </div>
    @ViewBag.fil;
</body>