@model IEnumerable<MongoDBtest.Models.User>
@{
    ViewBag.Title = "Profile";
}






<head>
    <title>Home</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <style>
        .customDiv {
            background-color: silver;
            margin: 3px;
            min-height: 200px;
            text-align: center;
            font-size: 30px;
            color: red;
        }



        .customDiv2 {
            margin: 35px;
            min-height: 10px;
        }



        .customNav {
            font-style: italic;
        }
    </style>
</head>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="#" style="color:#b0abab;font-size:22px;"><strong>@TempData["Username"]</strong></a></li>
                <li><a href="/Home/Posts" style="color:#b0abab;font-size:14px;">Home</a></li>
                <li><a href="/Home/Profile" style="color:#b0abab;font-size:14px;">Profile</a></li>
                <li>
                    <a href="@Url.Action("Logout","Home")" style="color:#b0abab;font-size:14px;">Log Out</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<body>







    <div class="row"><div class="col-md-12"><div class="customDiv2 font-weight-bold">Profile</div></div></div>


    <div class="row">
        <div class="col-md-12">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="container-fluid"><div class="row"><div class="col-md-4">Username</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Username)</div></div></div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid"><div class="row"><div class="col-md-4">Firstname</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Firstname)</div></div></div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid"><div class="row"><div class="col-md-4">Lastname</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Lastname)</div></div></div>
                </li>
                @if (Model.First().Emailaddress != null)
                {
                    <li class="list-group-item">
                        <div class="container-fluid"><div class="row"><div class="col-md-4">Email Address</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Emailaddress)</div></div></div>
                    </li>}
                <li class="list-group-item">
                    <div class="container-fluid"><div class="row"><div class="col-md-4">Nickname</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Nickname)</div></div></div>
                </li>
                <li class="list-group-item">
                    <div class="container-fluid"><div class="row"><div class="col-md-4">Gender</div><div class="col-md-6">@Html.DisplayFor(modelItem => modelItem.First().Gender)</div></div></div>
                </li>
            </ul>
        </div>
    </div>


    </div>

</body>

